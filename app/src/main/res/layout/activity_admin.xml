<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hot_cinema"
    tools:context=".ui.admin.AdminActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý HotCinema"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#02599E"
        android:textColor="@android:color/white"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnQuanLyTaiKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý tài khoản"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="onQuanLyTaiKhoanClick"/>

    <Button
        android:id="@+id/btnQuanLyPhong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý phòng"
        app:layout_constraintTop_toBottomOf="@+id/btnQuanLyTaiKhoan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="onQuanLyPhongClick"/>

    <Button
        android:id="@+id/btnQuanLyGhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý ghế"
        app:layout_constraintTop_toBottomOf="@+id/btnQuanLyPhong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="onQuanLyGheClick"/>

    <Button
        android:id="@+id/btnQuanLyCombo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý combo"
        app:layout_constraintTop_toBottomOf="@+id/btnQuanLyGhe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="onQuanLyComboClick"/>

    <Button
        android:id="@+id/btnQuanLyVe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý vé"
        app:layout_constraintTop_toBottomOf="@+id/btnQuanLyCombo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="onQuanLyVeClick"/>

    <Button
        android:id="@+id/btnDangXuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        app:layout_constraintTop_toBottomOf="@+id/btnQuanLyVe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="onDangXuatClick"/>

</androidx.constraintlayout.widget.ConstraintLayout>
