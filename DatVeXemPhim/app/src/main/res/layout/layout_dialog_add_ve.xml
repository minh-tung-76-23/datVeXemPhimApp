<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <!-- TextView tiêu đề -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A657D0"
        android:gravity="center"
        android:padding="12dp"
        android:text="Thêm Vé"
        android:textColor="#F4F4F4"
        android:textStyle="bold" />

    <!-- Các EditText để nhập dữ liệu -->
    <EditText
        android:id="@+id/addIdVe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="ID Vé"
        android:padding="12dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/addLoaiVe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Loại Vé"
        android:padding="12dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/addGiaVe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Giá Vé"
        android:padding="12dp"
        android:textSize="14sp" />

    <!-- Nút Thêm và Thoát trong LinearLayout ngang -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnThem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_margin="4dp"
            android:text="Thêm" />

        <Button
            android:id="@+id/btnThoat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="Thoát" />
    </LinearLayout>

</LinearLayout>
