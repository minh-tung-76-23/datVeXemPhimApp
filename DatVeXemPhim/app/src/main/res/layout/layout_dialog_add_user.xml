<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A657D0"
            android:gravity="center"
            android:padding="12dp"
            android:text="Thêm Tài Khoản"
            android:textColor="#F4F4F4"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Email"
            android:padding="12dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/addPassWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="PassWord"
            android:padding="12dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/addFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Họ tên"
            android:padding="12dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/addNgaySinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Nhập Ngày sinh (DD/MM/YYY)"
            android:padding="12dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/addSoDienThoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Số điện thoại"
            android:padding="12dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/addRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Quyền (Admin/ User)"
            android:padding="12dp"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnThem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:layout_margin="4dp"
                android:text="Thêm" />

            <Button
                android:id="@+id/btnThoat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Thoát" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>